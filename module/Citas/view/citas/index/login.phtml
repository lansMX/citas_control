<script type="text/javascript">
	$("#inciar").on('click', function(event){
		$.ajax({
			method : 'POST',
			url : 'verificar',
			dataType : 'json',
			'data': { 'user' : $("#usuario").val(), 'pass': $("#pswd").val() },
			success: function(result){
				console.log( result );

				swal({
					  title: result.message,
					  type: result.status
				});

				if (result.status == "success") {
					window.location.href = "/citas/pacientes";
				}

			}
		});
	});
</script>